unit search;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,peremen,
  Dialogs, Grids, StdCtrls;

type

  TTSearch = class(TForm)
    Edit1: TEdit;
    Label1: TLabel;
    Label2: TLabel;
    Button1: TButton;
    Button2: TButton;
    Label3: TLabel;
    Edit2: TEdit;
    Label4: TLabel;
    Edit3: TEdit;
    Button3: TButton;
    Label5: TLabel;
    TAB: TStringGrid;
    Label6: TLabel;
    Label7: TLabel;
    Edit4: TEdit;
    Edit5: TEdit;
    Label8: TLabel;
   procedure CleanAll;
   procedure FormCreate(Sender: TObject);
   procedure Button3Click(Sender: TObject);
   procedure Button2Click(Sender: TObject);
   procedure Button1Click(Sender: TObject);
   procedure Edit1Change(Sender: TObject);
   procedure Edit2Change(Sender: TObject);
   procedure Edit3Change(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  TSearch: TTSearch;

implementation

{$R *.dfm}
var f:tovarfile;

procedure TTsearch.CleanAll;
var i,j:integer;
begin
 for i:=1 to tab.RowCount-1 do
  for j:=0 to tab.ColCount do
   tab.Cells[j,i]:='';
end;

procedure Putzap(n:integer;r:Ttovar);
var M,D:shortstring;
begin
 with Tsearch.TAB do
 begin
  Cells[0,n]:=r.name;
  Cells[1,n]:=r.cost;
  Cells[2,n]:=r.V;
   str(r.Tdata.Day,D);
  Cells[3,n]:=D;
   str(r.Tdata.Month,M);
  Cells[4,n]:=M;
  Cells[5,n]:=r.Tdata.year;

 end;
end;
 procedure TTsearch.FormCreate(Sender: TObject);
begin

        with Tsearch.TAB do
        begin
         cells[0,0]:='»Ãﬂ “Œ¬¿–¿';
         cells[1,0]:='÷≈Õ¿ “Œ¬¿–¿';
         cells[2,0]:='Œ¡‹≈Ã œ¿–“»ﬂ';
         cells[3,0]:='ƒ≈Õ‹';
         cells[4,0]:='Ã≈—ﬂ÷';
         cells[5,0]:='√Œƒ';
        end;



end;

procedure TTSearch.Button3Click(Sender: TObject);
var rec:Ttovar;
    V1,V2,k,m,n,d,mo,Dcode,Mcode:integer;

begin
if (edit1.text='') and (edit2.text='') and (edit3.text='') then
 ShowMessage('¬¬Â‰ËÚÂ ‰‡ÌÌ˚Â ‰Îˇ ÔÓËÒÍ‡!')
 else
 begin

 AssignFile(f,'notes.dat');
 reset(f);
 seek(f,0);
 k:=1;
 n:=1;
 m:=1;
   while not(EOF(f)) do
    begin
     read(f,rec);

     if (edit1.text<>'') then
       begin
        if(rec.name=edit1.text) then
          begin
           putzap(k,rec);
           inc(k);
          end;
       end;
    end;

 seek(f,0);
  while not(EOF(f)) do
   begin
     read(f,rec);

     if (edit2.text<>'') then
      begin
       val(rec.V,V1,Mcode);
       val(Edit2.Text,V2,Dcode);
        if(V1>=V2) then
          begin
           putzap(m,rec);
           inc(m);
          end;
      end;
    end;

 seek(f,0);
  while not(EOF(f)) do
    begin
      read(f,rec);

      if (edit3.Text<>'')and(edit4.Text<>'')and(edit5.Text<>'') then
         begin

           val(edit3.Text,D,Dcode);
        if Dcode<>0 then ShowMessage('Error DAY!');


        val(edit4.Text,Mo,Mcode);

        if Mcode<>0 then ShowMessage('Error MONTH!');

          if(rec.Tdata.year>=edit5.text) then
          begin
            putzap(n,rec);

              if  (rec.Tdata.day>=M) then
               begin
                 putzap(n,rec);

                    if (rec.Tdata.month>=mo)then
                     begin
                        putzap(n,rec);

                     end;
               end;
           inc(n);
          end;


        end;
   end;
  end;
  closefile(f);
end;

procedure TTSearch.Button1Click(Sender: TObject);
var i,code:integer;sum,j,z:real;st:shortstring;
begin

  val(tsearch.TAB.cells[2,1],j,code);
  val(tsearch.TAB.cells[1,1],z,code);
 sum:=j*z;
 for i:=2 to tab.RowCount-2 do
  begin
    val(tsearch.TAB.cells[2,i],j,code);
    val(tsearch.TAB.cells[1,i],z,code);
   if  (z*j) > sum then
    begin
     sum:=(z*j);
    end;
  end;
 str(sum:2:2,st);
 label2.Caption:=st;
end;


procedure TTSearch.Button2Click(Sender: TObject);

 var i,code:integer;sum,j,z:real;st:shortstring;
begin
 sum:=0;
 for i:=1 to tab.RowCount-1 do

  begin
    val(tsearch.TAB.cells[2,i],j,code);
    val(tsearch.TAB.cells[1,i],z,code);
    sum:=sum+(z*j);
  end;

 str(sum:2:2,st);
 label5.Caption:=st;
end;


procedure TTSearch.Edit1Change(Sender: TObject);
begin
CleanAll;
 Edit2.Text:='';
 Edit3.Text:='';
 Edit4.Text:='';
 Edit5.Text:='';
end;

procedure TTSearch.Edit2Change(Sender: TObject);
begin
CleanAll;
 Edit1.Text:='';
 Edit3.Text:='';
 Edit4.Text:='';
 Edit5.Text:='';
end;

procedure TTSearch.Edit3Change(Sender: TObject);
begin
CleanAll;
 Edit2.Text:='';
 Edit1.Text:='';
end;



end.

